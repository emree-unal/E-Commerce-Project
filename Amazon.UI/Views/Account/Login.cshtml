<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    
    <link  href="~/Login Page/loginpage.css" rel="stylesheet" type="text/css">
  

</head>

<body>
    <h2>Weekly Coding Challenge #1: Sign in/up Form</h2>
    <div class="container" id="container">
        <div class="form-container sign-up-container">
            <form asp-action="CreateAccount" asp-controller="Users" asp-route-returnUrl="@ViewBag.ReturnUrl">

                <h1>Create Account</h1>

                <span>or use your email for registration</span>
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <input type="text" asp-for="UserName" placeholder="UserName" />
                @Html.ValidationMessage("CreateUserError", new { @style = "color:red" })
                <input type="email" asp-for="Email" placeholder="Email" />
                <input type="password" asp-for="Password" placeholder="Password" />

                <button>Sign Up</button>
            </form>
        </div>
        <div class="form-container sign-in-container">
            <form asp-action="Login" asp-controller="Account" asp-route-returnUrl="@ViewBag.ReturnUrl">
                <h1>Sign in</h1>

             
                <input asp-for="UserName" class="form-control" placeholder="UserName" />
                <span asp-validation-for="UserName" style="color:red"></span>
                <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                <span asp-validation-for="Password" style="color:red"></span>
                @Html.ValidationMessage("UserError", new { @style = "color:red" })

                <a href="#">Forgot your password?</a>
                <button>Sign In</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Welcome Back!</h1>
                    <p>To keep connected with us please login with your personal info</p>
                    <button class="ghost" id="signIn">Sign In</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>Hello, Friend!</h1>
                    <p>Enter your personal details and start journey with us</p>
                    <button class="ghost" id="signUp">Sign Up</button>
                </div>
            </div>
        </div>
    </div>


    <!-- Bootstrap core JavaScript-->
    <script src="~/Login Page/loginpage.js"></script>


</body>

</html>



